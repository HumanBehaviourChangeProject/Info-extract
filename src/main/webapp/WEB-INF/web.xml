<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>ExtractedInfoViewerServlet</servlet-name>
        <servlet-class>servlets.ExtractedInfoViewerServlet</servlet-class>
    </servlet>    
    <servlet>
        <servlet-name>DocumentViewerServlet</servlet-name>
        <servlet-class>servlets.DocumentViewerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PassageSearchServlet</servlet-name>
        <servlet-class>servlets.PassageSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>OntologyTreeServlet</servlet-name>
        <url-pattern>/OntologyTreeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExtractedInfoViewerServlet</servlet-name>
        <url-pattern>/ExtractedInfoViewerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PassageSearchServlet</servlet-name>
        <url-pattern>/PassageSearchServlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>DocumentViewerServlet</servlet-name>
        <url-pattern>/DocumentViewerServlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>navigate</servlet-name>
        <jsp-file>/navigate.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>OntologyTreeServlet</servlet-name>
        <servlet-class>servlets.OntologyTreeServlet</servlet-class>
    </servlet>
    <welcome-file-list>
        <welcome-file>navigate.jsp</welcome-file>
    </welcome-file-list>
</web-app>
